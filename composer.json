{
  "name": "vesperphp/project",
  "type": "project",
  "description": "Vesper PHP, build fast.",
  "keywords": ["framework", "vesperphp", "php"],
  "license": "MIT",
  
  "authors": [
      {
          "name": "Rik Janssen",
          "email": "rik@vesperphp.com"
      }
  ],

  "require": {
    "vesperphp/elemental": "0.*",
    "vesperphp/frontal": "0.*",
    "vesperphp/processor": "0.*",
    "cart-rd/logger": "0.*",
    "scssphp/scssphp": "^1.11.0"
  },
  
  "autoload": {
    "classmap": [
      "app/models", 
      "app/controllers", 
      "app/providers",
      "app/providers/ware",
      "vendor/vesperphp",
      "vendor/cart-rd"
    ]
  },

  "config": {
    "optimize-autoloader": true,
    "prefer-stable": true
  }

}
